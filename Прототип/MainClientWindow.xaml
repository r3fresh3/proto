<Window x:Class="Прототип.MainClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainClientWindow" Height="550" Width="1000"
        xmlns:local="clr-namespace:Прототип"
        WindowStartupLocation="CenterScreen" Background="White"
        Loaded="MainClientWindow_Loaded" 
        >
    <Window.Resources>
        <local:DiscountVisibilityConverter x:Key="DiscountVisibilityConverter"/>
    </Window.Resources>
    <DockPanel Margin="10">

        <!-- Верхняя панель: поиск + имя клиента -->
        <Grid DockPanel.Dock="Top" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Поисковая строка -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="searchBox" Width="250" Height="30"
             Text="Поиск..." Foreground="Gray"
             VerticalContentAlignment="Center"
             Margin="0,0,10,0"
             GotFocus="searchBox_GotFocus"
             LostFocus="searchBox_LostFocus"
             TextChanged="SearchFilterChanged"/>

                <TextBlock x:Name="countTextBlock"
               VerticalAlignment="Center"
               FontSize="12"
               Foreground="Gray"
               Margin="0,0,10,0"/>
            </StackPanel>


            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock x:Name="clientNameBlock" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="clientRoleBlock" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <!-- Основная область -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <!-- Левая панель -->
                <ColumnDefinition Width="*" />
                <!-- Правая панель с таблицей -->
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <StackPanel Grid.Column="0" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                
                <ComboBox x:Name="sortBox" Width="150" Height="25" Margin="0,0,0,10"
              SelectionChanged="SortBox_SelectionChanged">
                    <ComboBoxItem Content="Без сортировки" IsSelected="True"/>
                    <ComboBoxItem Content="Сначала дешёвые"/>
                    <ComboBoxItem Content="Сначала дорогие"/>
                </ComboBox>
                <!-- Фильтр по производителю -->
                <ComboBox x:Name="manufacturerFilterBox" Width="150" Height="30" Margin="0,0,0,10"
              SelectionChanged="SearchFilterChanged"
              VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Все производители" IsSelected="True"/>
                   
                </ComboBox>

                
                <ComboBox x:Name="categoryFilterBox" Width="150" Height="30" Margin="0,0,0,10"
              SelectionChanged="SearchFilterChanged"
              VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Все категории" IsSelected="True"/>
                    
                </ComboBox>
                

                <!-- Блок под "Добавить товар" — высота зарезервирована -->
                <Grid Height="30">
                    <Button x:Name="AddProductButton"
                Content="Добавить товар"
                Width="150" Height="30"
                Visibility="Collapsed"
                 Cursor="Hand"
                Click="AddProductButton_Click"/>
                </Grid>

               
                <Rectangle Height="260" Fill="Transparent"/>

                
                <Button x:Name="ReturnButton"
            Content="Вернуться в меню"
            Width="150" Height="30" Margin="0,10,0,5"
            Cursor="Hand"
            Click="ReturnButton_Click"/>
            </StackPanel>

            <!-- DataGrid вместо карточек -->
            <DataGrid Grid.Column="1" x:Name="tovarDataGrid" AutoGenerateColumns="False"
          Margin="0,10,0,0" CanUserAddRows="False" IsReadOnly="True"
          RowHeight="80" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
          LoadingRow="tovarDataGrid_LoadingRow"
          MouseDoubleClick="tovarDataGrid_MouseDoubleClick"
          >

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="MinHeight" Value="80"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    
                    <DataGridTemplateColumn Header="Изображение" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}" Width="80" Height="80" Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="105"  CanUserSort="False"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="80" CanUserSort="False"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="183" CanUserSort="False"/>
                    <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="97" CanUserSort="False"/>
                    <DataGridTemplateColumn Header="Стоим/Ед" Width="65" CanUserSort="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- Новая цена -->
                                    <TextBlock Text="{Binding DiscountedPrice, StringFormat='{}{0:F2} ₽'}"
                           Foreground="DarkRed"
                           FontWeight="Bold"
                           FontSize="11"
                           TextAlignment="Center"/>

                                    <!-- Старая цена, зачёркнутая -->
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:F2} ₽'}"
                           TextDecorations="Strikethrough"
                           Foreground="Gray"
                           FontSize="10"
                           TextAlignment="Center"
                           Visibility="{Binding Discount, Converter={StaticResource DiscountVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTextColumn Header="Остаток" Width="55" CanUserSort="False">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Stock" StringFormat="{}{0}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="ЕдИзм" Binding="{Binding Unit}" Width="47" CanUserSort="False"/>
                    <DataGridTextColumn Header="Скидка (%)" Width="70"  CanUserSort="False">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Discount" StringFormat="{}{0:0}%"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </DockPanel>
</Window>
