<Window x:Class="Прототип.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="549" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <Button Content="←"
        Width="30"
        Height="30"
        FontSize="16"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="10,10,0,0"
        Background="Transparent"
        BorderBrush="{x:Null}"
        Cursor="Hand"
        Click="BackButton_Click"/>
        <!-- Заголовок -->
        <TextBlock Text="Регистрация"
                   FontSize="26"
                   FontFamily="Century Gothic"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"
                   VerticalAlignment="Top"/>

        <!-- Логин -->
        <TextBox x:Name="logBox"
                 HorizontalAlignment="Center"
                 Margin="0,112,0,0"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="230"
                 Height="28"
                 FontSize="14"
                 FontStyle="Italic"
                 Text="Логин"
                 Foreground="Gray"
                 GotFocus="logBox_GotFocus"
                 LostFocus="logBox_LostFocus"/>

        <!-- Фамилия -->
        <TextBox x:Name="lastNameBox"
                 HorizontalAlignment="Center"
                 Margin="0,152,0,0"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="230"
                 Height="28"
                 FontSize="14"
                 FontStyle="Italic"
                 Text="Фамилия"
                 Foreground="Gray"
                 GotFocus="logBox_GotFocus"
                 LostFocus="logBox_LostFocus"/>

        <!-- Имя -->
        <TextBox x:Name="firstNameBox"
                 HorizontalAlignment="Center"
                 Margin="0,192,0,0"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="230"
                 Height="28"
                 FontSize="14"
                 FontStyle="Italic"
                 Text="Имя"
                 Foreground="Gray"
                 GotFocus="logBox_GotFocus"
                 LostFocus="logBox_LostFocus"/>

        <!-- Отчество -->
        <TextBox x:Name="middleNameBox"
                 HorizontalAlignment="Center"
                 Margin="0,232,0,0"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="230"
                 Height="28"
                 FontSize="14"
                 FontStyle="Italic"
                 Text="Отчество"
                 Foreground="Gray"
                 GotFocus="logBox_GotFocus"
                 LostFocus="logBox_LostFocus"/>

        <Grid Width="230" Height="28"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      Margin="0,273,0,0">

            <!-- PasswordBox -->
            <PasswordBox x:Name="passwordBox"
                 FontSize="14"
                 FontStyle="Italic"
                 Padding="5,0,30,0"
                 VerticalContentAlignment="Center"
                 PasswordChanged="passwordBox_PasswordChanged"
                 GotFocus="PasswordBox_GotFocus"
                 LostFocus="PasswordBox_LostFocus"
                 Visibility="Visible"
                 Grid.ZIndex="1"/>

            <!-- TextBox для отображения пароля -->
            <TextBox x:Name="visiblePasswordBox"
             FontSize="14"
             FontStyle="Italic"
             Padding="5,0,30,0"
             VerticalContentAlignment="Center"
             Visibility="Collapsed"
             TextChanged="visiblePasswordBox_TextChanged"
             GotFocus="VisiblePasswordBox_GotFocus"
             LostFocus="VisiblePasswordBox_LostFocus"
             Grid.ZIndex="1"/>

            <!-- Плейсхолдер -->
            <TextBlock x:Name="passwordPlaceholder"
               Text="Введите пароль"
               Foreground="Gray"
               FontStyle="Italic"
               FontSize="14"
               VerticalAlignment="Center"
               Margin="5,0,30,0"
               IsHitTestVisible="False"
               Grid.ZIndex="2"/>

            <!-- Глазик -->
            <Button Width="24"
            Height="24"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,2,0"
            Background="Transparent"
            BorderBrush="{x:Null}"
            Click="TogglePasswordVisibility"
            Cursor="Hand"
            Grid.ZIndex="3">
                <TextBlock x:Name="eyeIcon" Text="👁" FontSize="14"/>
            </Button>
        </Grid>


        <!-- Подтвердите пароль -->
        <Grid Width="230" Height="28"
      HorizontalAlignment="Center"
      Margin="0,312,0,0"
      VerticalAlignment="Top">

            <TextBox x:Name="visibleConfirmPasswordBox"
             FontSize="14"
             FontStyle="Italic"
             VerticalContentAlignment="Center"
             Visibility="Collapsed"
             Padding="5,0,30,0"/>

            <PasswordBox x:Name="confirmPasswordBox"
                 FontSize="14"
                 FontStyle="Italic"
                 VerticalContentAlignment="Center"
                 Padding="5,0,30,0"
                 PasswordChanged="confirmPasswordBox_PasswordChanged"/>

            <TextBlock x:Name="confirmPlaceholder"
               Text="Подтвердите пароль"
               Foreground="Gray"
               FontStyle="Italic"
               IsHitTestVisible="False"
               VerticalAlignment="Center"
               Margin="5,0,30,0"
               Visibility="Visible"
               FontSize="14"/>

            <Button Width="24"
            Height="24"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,0,2,0"
            Background="Transparent"
            BorderBrush="{x:Null}"
            Click="ToggleConfirmPasswordVisibility"
            Cursor="Hand">
                <TextBlock x:Name="confirmEyeIcon" Text="👁" FontSize="14"/>
            </Button>
        </Grid>

        <!-- Кнопка Зарегистрироваться -->
        <Button Content="Зарегистрироваться"
                Width="230"
                Height="35"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,458,0,0"
                Click="RegisterButton_Click"/>
    </Grid>
</Window>
